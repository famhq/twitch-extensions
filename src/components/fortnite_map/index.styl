@require '../../vars'

.z-fortnite-map
  width: 100%
  height: 100%
  position: relative

  > .map
    width: 100%
    height: 100%
    background: url($cdnUrl + '/fortnite/map.jpg') no-repeat
    background-size: 100% auto

    > .pin
      position: absolute

    > .reset-icon
      position: absolute
      top: 0
      left: 0
