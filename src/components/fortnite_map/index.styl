@require '../../vars'

.z-fortnite-map
  width: 100%
  height: 100%
  flex: 1
  min-height: 0

  > .map
    width: 100%
    height: 100%
    background: url($cdnUrl + '/fortnite/map.jpg') no-repeat
    background-size: 100% auto
    margin: 0 auto
    position: relative

    > .pin
      position: absolute

    > .reset-icon
      position: absolute
      top: 0
      left: 0
