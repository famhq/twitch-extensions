@require '../../vars'

.z-twitch-sign-in-overlay
  background: getColor('$tertiary90054')
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: $zIndexInstallOverlay

  > .content
    margin-left: auto
    position: absolute
    bottom: 16px
    right: 38px
    padding-left: 16px
    box-sizing: border-box
    width: 100%
    max-width: 300px
    text-align: right

    > .instructions
      margin-bottom: 8px

      > .title
        font-title()

      > .text
        > .twitch-permissions-icon
          display: inline-block
          width: 16px
          height: 16px
          background: url($cdnUrl + '/twitch_extension/twitch_permissions.svg') no-repeat

    > .arrow
      width: 96px
      height: 53px
      background: url($cdnUrl + '/twitch_extension/connect_twitch_arrow.svg') no-repeat
      background-size: 100%
      margin-left: auto
