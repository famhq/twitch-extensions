@require '../../vars'

.z-spy-party
  opacity: 1
  height: 100%
  width: 100%
  box-sizing: border-box
  transform: translateX(100%)
  margin-left: -16px
  transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)
  background: rgba(255, 0, 0, 0.2)

  &.is-open
    transform: translateX(16px)
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)

  > .slide
    background: red
    height: 100%
    width: 16px
    position: absolute
    left: 0
    top: 0
    cursor: pointer
    z-index: 9999

    > .icon
      position: absolute
      background: red
      border-radius: 10px
      margin-left: -12px
      top: 50%
      margin-top: -18px


  > .flex
    display: flex
    align-items: center
    padding: 16px
    opacity: 0.87

    > .left, > .right
      cursor: pointer

    > .left
      margin-left: auto

    > .right
      margin-right: auto

    > .characters
      max-width: 600px
      margin: 0 auto
      flex: 1

      > .g-grid
        > .g-cols
          margin-left: 0
          margin-right: 0

          > .g-col
            padding: 0

            > .character
              padding-bottom: 100%
              background-size: 100%
              background-repeat: no-repeat
              cursor: pointer
              position: relative
              border: 2px solid rgba(0, 0, 0, 1)

              &.is-selected
                border: 2px solid getColor('$white')

              .selection-bar
                position: absolute
                bottom: -4px
                left: 0
                width: 100%
                height: 100%
                transform: scaleY(0)
                transform-origin: bottom
                transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1)
                background: rgba(255, 0, 0, 0.7)
                will-change: transform

  > .shoot-button
    opacity: 0.87
    font-button()
    shadow-1()
    text-align: center
    background: red
    max-width: 300px
    padding: 16px
    box-sizing: border-box
    border-radius: 2px
    margin: 16px auto
    cursor: pointer
